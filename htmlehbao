    <script>
        
        const canvas = document.getElementById('matrix-bg');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const matrix = "ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789@#$%^&*()*&^%+-/~{[|`]}";
        const matrixArray = matrix.split("");

        const fontSize = 10;
        const columns = canvas.width / fontSize;

        const drops = [];
        for(let x = 0; x < columns; x++) {
            drops[x] = 1;
        }

        function drawMatrix() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.04)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#00ff00';
            ctx.font = fontSize + 'px monospace';

            for(let i = 0; i < drops.length; i++) {
                const text = matrixArray[Math.floor(Math.random() * matrixArray.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                if(drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(drawMatrix, 35);

        
        const terminal = document.getElementById('terminal');
        const output = document.getElementById('output');
        const commandInput = document.getElementById('command-input');
        const progressContainer = document.getElementById('progress-container');
        const progressBar = document.getElementById('progress-bar');
        
        let isHacking = false;
        let hackInterval;
        
      
        const commands = {
            help: function() {
                addOutput("üìã COMANDOS DISPON√çVEIS:", "info");
                addOutput("  scan     - Escanear rede local", "info");
                addOutput("  exploit  - Explorar vulnerabilidades", "info");
                addOutput("  crack    - Quebrar senhas", "info");
                addOutput("  ddos     - Iniciar ataque DDoS", "info");
                addOutput("  trace    - Rastrear IP", "info");
                addOutput("  ipconfig - Mostrar informa√ß√µes de rede", "info");
                addOutput("  whoami   - Identifica√ß√£o atual", "info");
                addOutput("  clear    - Limpar terminal", "info");
                addOutput("  matrix   - Ativar/desativar efeito matrix", "info");
                addOutput("  selfdestruct - Auto destrui√ß√£o do sistema", "warning");
            },
            
            scan: function() {
                startHackProcess("üîç ESCANEANDO REDE...", [
                    "192.168.0.1 - Roteador [PROTEGIDO]",
                    "192.168.0.105 - Windows 10 [VULNER√ÅVEL]",
                    "192.168.0.120 - Linux Server [FIREWALL ATIVO]",
                    "192.168.0.150 - Camera IP [ACESSO PADR√ÉO]",
                    "192.168.0.200 - Smart TV [ABERTA]"
                ], "success");
            },
            
            exploit: function() {
                startHackProcess("üí£ EXPLORANDO VULNERABILIDADES...", [
                    "CVE-2024-1234 - SMBGhost [EXPLOTANDO...]",
                    "CVE-2023-5678 - EternalBlue [SUCESSO]",
                    "BACKDOOR DETECTADO NA PORTA 445",
                    "ACESSO ADMINISTRADOR CONCEDIDO",
                    "üêö SHELL REMOTO ABERTO"
                ], "success");
            },
            
            crack: function() {
                startHackProcess("üîì QUEBRANDO HASHES...", [
                    "HASH: $2y$10$YourHashHere",
                    "WORDLIST: rockyou.txt [CARREGADA]",
                    "TENTATIVAS: 1,548,231",
                    "SENHA ENCONTRADA: admin123",
                    "HASH DECRIPTADA COM SUCESSO"
                ], "success");
            },
            
            ddos: function() {
                startHackProcess("üåê INICIANDO ATAQUE DDoS...", [
                    "ALVO: 203.0.113.42",
                    "PACOTES ENVIADOS: 1,000,000",
                    "LARGURA DE BANDA: 10 Gbps",
                    "STATUS: SOBRECARGA DETECTADA",
                    "üî• ALVO OFFLINE"
                ], "warning");
            },
            
            trace: function() {
                startHackProcess("üïµÔ∏è RASTREANDO IP...", [
                    "IP: 187.34.56.789",
                    "PA√çS: Brasil",
                    "CIDADE: S√£o Paulo",
                    "PROVEDOR: Vivo",
                    "COORDENADAS: -23.5505, -46.6333",
                    "‚ö†Ô∏è LOCALIZA√á√ÉO APROXIMADA"
                ], "info");
            },
            
            ipconfig: function() {
                addOutput("üì° CONFIGURA√á√ÉO DE REDE:", "info");
                addOutput("  IP Local: 192.168.1.105", "info");
                addOutput("  MAC: 00:1A:2B:3C:4D:5E", "info");
                addOutput("  Gateway: 192.168.1.1", "info");
                addOutput("  DNS: 8.8.8.8", "info");
                addOutput("  Mascara: 255.255.255.0", "info");
            },
            
            whoami: function() {
                addOutput("üë§ IDENTIDADE ATUAL:", "warning");
                addOutput("  Usu√°rio: root", "warning");
                addOutput("  Hostname: anonymous@darknet", "warning");
                addOutput("  Privil√©gios: ADMINISTRADOR", "warning");
                addOutput("  Conex√µes ativas: 3", "warning");
            },
            
            matrix: function() {
                if(canvas.style.display === 'none') {
                    canvas.style.display = 'block';
                    addOutput("üåÄ EFEITO MATRIX ATIVADO", "success");
                } else {
                    canvas.style.display = 'none';
                    addOutput("üåÄ EFEITO MATRIX DESATIVADO", "warning");
                }
            },
            
            selfdestruct: function() {
                addOutput("üí• ATIVANDO AUTO DESTRUI√á√ÉO...", "error");
                addOutput("‚ö†Ô∏è O SISTEMA SER√Å DESTRU√çDO EM 5 SEGUNDOS", "error");
                
                let countdown = 5;
                const interval = setInterval(() => {
                    if(countdown > 0) {
                        addOutput(`‚è∞ ${countdown}...`, "error");
                        countdown--;
                    } else {
                        clearInterval(interval);
                        addOutput("üí¢ SISTEMA DESTRU√çDO!", "error");
                        addOutput("üîÑ REINICIANDO...", "warning");
                        setTimeout(() => {
                            clearTerminal();
                            addOutput("> SISTEMA RESTAURADO", "success");
                        }, 2000);
                    }
                }, 1000);
            },
            
            clear: function() {
                clearTerminal();
            }
        };
        
        function addOutput(text, type = "output-line") {
            const line = document.createElement('div');
            line.className = `output-line ${type}`;
            line.textContent = text;
            output.appendChild(line);
            terminal.scrollTop = terminal.scrollHeight;
        }
        
        function clearTerminal() {
            output.innerHTML = '';
        }
        
        function showProgress(show) {
            progressContainer.style.display = show ? 'block' : 'none';
        }
        
        function updateProgress(value) {
            progressBar.style.width = value + '%';
        }
        
        function startHackProcess(message, results, resultType) {
            if(isHacking) {
                addOutput("‚ùå J√Å EXISTE UM PROCESSO EM ANDAMENTO", "error");
                return;
            }
            
            isHacking = true;
            showProgress(true);
            addOutput(message, "warning");
            
            let progress = 0;
            hackInterval = setInterval(() => {
                progress += Math.random() * 10 + 5;
                if(progress >= 100) {
                    progress = 100;
                    updateProgress(progress);
                    
                    setTimeout(() => {
                        clearInterval(hackInterval);
                        showProgress(false);
                        
                        results.forEach(result => {
                            addOutput("  > " + result, resultType);
                        });
                        
                        addOutput("‚úÖ PROCESSO CONCLU√çDO", "success");
                        isHacking = false;
                    }, 500);
                }
                updateProgress(progress);
            }, 200);
        }
        
        function runCommand(cmd) {
            if(isHacking) {
                addOutput("‚ùå AGUARDE O PROCESSO ATUAL TERMINAR", "error");
                return;
            }
            
            if(commands[cmd]) {
                commands[cmd]();
            } else {
                addOutput(`‚ùå COMANDO N√ÉO RECONHECIDO: ${cmd}`, "error");
                addOutput("üí° DIGITE 'help' PARA VER OS COMANDOS DISPON√çVEIS", "info");
            }
            
            commandInput.value = '';
        }
        
        commandInput.addEventListener('keypress', (e) => {
            if(e.key === 'Enter') {
                const cmd = commandInput.value.toLowerCase().trim();
                if(cmd) {
                    runCommand(cmd);
                }
            }
        });
        
        
        setInterval(() => {
            if(Math.random() > 0.7 && !isHacking) {
                terminal.classList.add('glitch');
                setTimeout(() => {
                    terminal.classList.remove('glitch');
                }, 200);
            }
        }, 5000);
        
        
        setTimeout(() => {
            addOutput("‚ö° BEM-VINDO AO TERMINAL HACKER ‚ö°", "warning");
            addOutput("USE 'help' PARA COMANDOS DISPON√çVEIS", "info");
        }, 1000);
        
        
        setInterval(() => {
            const status = document.getElementById('connection-status');
            const statuses = ['CONECTADO üîí', 'MODO FURTIVO üëÅÔ∏è', 'PROXY ATIVO üåê', 'TOR ATIVADO üßÖ', 'VPN ATIVA üîê'];
            status.textContent = statuses[Math.floor(Math.random() * statuses.length)];
            status.style.color = Math.random() > 0.5 ? '#00ff00' : '#ffff00';
        }, 3000);
        
        
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>
